@{ ViewBag.Title = "Ненавязчивый AJAX"; }

<div class="container">
    <div class="row" style="margin-bottom: 10px;">
        <div class="col-md-4">
            <h4>Рендринг на стороне сервер</h4>

            <a class="btn btn-default"
               data-ajax="true"
               data-ajax-url="@Url.Action("GetHTML", "AjaxTest", new { id = 42, msg = "Hello World to HTML", Delay = "3000" })"
               data-ajax-loading="#spinner-server"
               data-ajax-update="#panel-server">
                Загрузка
            </a>

            <span id="spinner-server" style="display: none">
                <i class="fa fa-spinner fa-spin"></i>
            </span>

            <div id="panel-server"></div>
        </div>
        <div class="col-md-4">
            <h4>Рендринг на стороне клиента</h4>

            <a class="btn btn-default"
               data-ajax="true"
               data-ajax-url="@Url.Action("GetJSON", "AjaxTest", new { id = 42, msg = "Hello World to JSON", Delay = "3000" })"
               data-ajax-loading="#spinner-client"
               data-ajax-success="OnJSONLoaded">
                Загрузка
            </a>

            <span id="spinner-client" style="display: none">
                <i class="fa fa-spinner fa-spin"></i>
            </span>

            <div id="panel-client"></div>
        </div>
        <div class="col-md-4">
            <h4>Рендринг руками</h4>

            <a class="btn btn-default">Загрузка</a>

            <div id="panel-js"></div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        OnJSONLoaded = data => {
            const panel = $("#panel-client");
            panel.empty();
            panel.append("msg: " + data.message);
            panel.append("<br/>");
            panel.append("Server time: " + data.serverTime);
        }
    </script>
}